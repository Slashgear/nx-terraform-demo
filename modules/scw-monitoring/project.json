{
  "name": "scw-monitoring",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "modules/scw-monitoring",
  "targets": {
    "fmt": {
      "executor": "nx:run-commands",
      "options": {
        "command": "terraform fmt -check",
        "cwd": "modules/scw-monitoring"
      },
      "configurations": {
        "fix": {
          "command": "terraform fmt",
          "cwd": "modules/scw-monitoring"
        }
      }
    },
    "validate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["terraform init -backend=false", "terraform validate"],
        "cwd": "modules/scw-monitoring",
        "parallel": false
      },
      "dependsOn": ["fmt", "^validate"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tflint --init && tflint",
        "cwd": "modules/scw-monitoring"
      },
      "dependsOn": ["validate"]
    },
    "security": {
      "executor": "nx:run-commands",
      "options": {
        "command": "checkov -d . --quiet --compact",
        "cwd": "modules/scw-monitoring"
      },
      "dependsOn": ["lint"]
    },
    "docs": {
      "executor": "nx:run-commands",
      "options": {
        "command": "terraform-docs markdown table --output-file README.md --output-mode inject .",
        "cwd": "modules/scw-monitoring"
      }
    }
  },
  "tags": ["terraform", "infrastructure", "monitoring", "observability"],
  "implicitDependencies": ["scw-k8s"]
}
