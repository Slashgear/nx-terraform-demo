{
  "name": "root",
  "version": "1.0.0",
  "description": "Demo project showing how to manage Terraform modules with Nx monorepo",
  "targets": {},
  "scripts": {
    "fmt": "nx run-many -t fmt --configuration=fix --exclude=root",
    "fmt:check": "nx run-many -t fmt --exclude=root",
    "validate": "nx run-many -t validate --exclude=root",
    "lint": "nx run-many -t lint --exclude=root",
    "security": "nx run-many -t security --exclude=root",
    "docs": "nx run-many -t docs --exclude=root",
    "affected:fmt": "nx affected -t fmt --configuration=fix --exclude=root",
    "affected:validate": "nx affected -t validate --exclude=root",
    "affected:lint": "nx affected -t lint --exclude=root",
    "affected:security": "nx affected -t security --exclude=root",
    "affected:all": "nx affected -t fmt validate lint security --exclude=root",
    "graph": "nx graph --exclude=root",
    "biome:check": "biome check .",
    "biome:fix": "biome check --write .",
    "biome:format": "biome format --write .",
    "biome:lint": "biome lint .",
    "format:all": "pnpm run biome:format && pnpm run fmt",
    "release": "nx release",
    "release:version": "nx release version",
    "release:changelog": "nx release changelog",
    "release:publish": "nx release publish",
    "release:dry-run": "nx release --dry-run"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@nx/js": "^22.0.2",
    "nx": "22.0.2"
  },
  "nx": {}
}
